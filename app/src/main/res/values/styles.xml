<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_orange</item>
        <item name="colorPrimaryDark">@color/entry_text_color</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="myTextInputLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@android:color/tertiary_text_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/hint_grey</item>
        <item name="colorControlActivated">@color/text_input_layout_underline_orange</item>
    </style>

    <style name="orangeButtonTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/entry_login_button_orange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NextAndSignUpButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/login_page_login_button_dark_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="SwitchStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/person_text_orange</item>
        <item name="colorPrimaryDark">@color/text_orange</item>
        <item name="colorAccent">@color/entry_login_button_orange</item>
        <item name="colorControlActivated">@color/text_input_layout_underline_orange</item>
    </style>


    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#ED9E28</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>